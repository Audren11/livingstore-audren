<h1>Liste des produits</h1>

<table>
  <tr>
    <th>Fabricant</th>
    <th>Name</th>
    <th>Element</th>
    <th>Category</th>
    <th>Revetement</th>
    <th>Prix</th>
    <th>Largeur</th>
    <th>Hauteur</th>
    <th>Profondeur</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produits.each do |produit| %>
  <tr>
    <td><%= produit.fabricant %></td>
    <td><%= produit.name %></td>
    <td><%= produit.element %></td>
    <td><%= produit.category %></td>
    <td><%= produit.revetement.capitalize %></td>
    <td><%= produit.price %> €</td>
    <td><%= produit.width %></td>
    <td><%= produit.height %></td>
    <td><%= produit.deep %></td>
    <td><%= link_to 'Détail', [produit.devi, produit] %></td>
    <td><%= link_to 'Modifier', edit_devi_produit_path(produit.devi, produit) %></td>
    <td><%= link_to 'Supprimer', [produit.devi, produit], method: :delete, data: { confirm: 'Dernier mot?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ajouter un produit', new_devi_produit_path(params[:devi_id]) %>
<br>
<%= link_to 'Retour', devi_path(params[:devi_id]) %>
