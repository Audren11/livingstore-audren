<h1>Listing produits</h1>

<table>
  <tr>
    <th>Fabricant</th>
    <th>Name</th>
    <th>Element</th>
    <th>Category</th>
    <th>Revetement</th>
    <th>Price</th>
    <th>Height</th>
    <th>Width</th>
    <th>Deep</th>
    <th>Devi</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @produits.each do |produit| %>
  <tr>
    <td><%= produit.fabricant %></td>
    <td><%= produit.name %></td>
    <td><%= produit.element %></td>
    <td><%= produit.category %></td>
    <td><%= produit.revetement %></td>
    <td><%= produit.price %></td>
    <td><%= produit.height %></td>
    <td><%= produit.width %></td>
    <td><%= produit.deep %></td>
    <td><%= produit.devi %></td>
    <td><%= link_to 'Show', [produit.devi, produit] %></td>
    <td><%= link_to 'Edit', edit_devi_produit_path(produit.devi, produit) %></td>
    <td><%= link_to 'Destroy', [produit.devi, produit], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Produit', new_devi_produit_path(params[:devi_id]) %>
